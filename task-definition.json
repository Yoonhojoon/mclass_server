{
  "family": "mclass-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::664418970959:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::664418970959:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "mclass-server",
      "image": "664418970959.dkr.ecr.ap-northeast-2.amazonaws.com/mclass-server:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://redis:6379"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:664418970959:parameter/mclass/database_url"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:664418970959:parameter/mclass/jwt_secret"
        },
        {
          "name": "KAKAO_CLIENT_ID",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:664418970959:parameter/mclass/kakao_client_id"
        },
        {
          "name": "KAKAO_CLIENT_SECRET",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:664418970959:parameter/mclass/kakao_client_secret"
        },
        {
          "name": "GOOGLE_CLIENT_ID",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:664418970959:parameter/mclass/google_client_id"
        },
        {
          "name": "GOOGLE_CLIENT_SECRET",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:664418970959:parameter/mclass/google_client_secret"
        },
        {
          "name": "NAVER_CLIENT_ID",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:664418970959:parameter/mclass/naver_client_id"
        },
        {
          "name": "NAVER_CLIENT_SECRET",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:664418970959:parameter/mclass/naver_client_secret"
        },
        {
          "name": "INITIAL_ADMIN_EMAIL",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:664418970959:parameter/mclass/initial_admin_email"
        },
        {
          "name": "INITIAL_ADMIN_PASSWORD",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:664418970959:parameter/mclass/initial_admin_password"
        },
        {
          "name": "INITIAL_ADMIN_NAME",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:664418970959:parameter/mclass/initial_admin_name"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mclass-task",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 5,
        "startPeriod": 120
      }
    }
  ]
}